<%= form_with model: blog_post, class: "bg-white shadow-md rounded-lg p-6 space-y-6" do |form| %>
    <% if form.object.errors.any? %>
    <div class="fixed top-4 right-4 z-50 w-full max-w-sm mx-auto">
        <div class="bg-red-100 border border-red-300 text-red-700 p-4 rounded-lg shadow-lg">
        <button type="button" class="absolute top-2 right-2 text-red-500 hover:text-red-700" aria-label="Close">
            &times;
        </button>
        <% form.object.errors.full_messages.each do |message| %>
            <div class="mb-2"><%= message %></div>
        <% end %>
        </div>
    </div>
    <% end %>

  <div class="space-y-2">
    <%= form.label :title, class: "block text-lg font-semibold text-gray-700" %>
    <%= form.text_field :title, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :body, class: "block text-lg font-semibold text-gray-700" %>
    <%= form.text_area :body, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-center">
  <%= form.submit "Submit", class: "bg-gray-800 hover:bg-blue-700 text-white text-2xl py-2 px-4 rounded-md shadow-sm transition ease-in-out duration-150" %>
</div>
<% end %>
